<Window x:Class="TextEditor.LastFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="LastFiles" Height="464.789" Width="400.352">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <TextBlock FontSize="22" Margin="10">Последние файлы</TextBlock>
            </Grid>
            <Grid>
                <ListBox x:Name="_lastFiles" ListBoxItem.Selected="_lastFiles_Selected">
                </ListBox>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
